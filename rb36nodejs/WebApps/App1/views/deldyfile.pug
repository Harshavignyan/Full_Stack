html
  head
    title Info
    
    style.
      h1 {
        color: #333;
        text-align: center;
      }
      p {
        color: #666;
        font-size: 14px;
        margin: 20px;
        text-align: center;
      }
      table {
        border-collapse: collapse;
        border: 2px solid rgb(140 140 140);
        font-family: sans-serif;
        font-size: 0.8rem;
        letter-spacing: 1px;
        width: 100%;
        height: 15%;
        margin-left: 0px;
        margin-bottom: 0px;
        margin
        
      }
      td{
          text-align: center;
        }
      tr{
        height: auto;
      }

      tr:nth-of-type(odd) {
          background-color: rgb(237 238 242);
        }
      th {
        background-color: rgb(228 240 245);
      }
      button {
        background-color: lightblue; /* Green */
        border: none;
        color: white;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        color: black;
        vertical-align: center;
        cursor:pointer;
        border-radius: 5px
      }
      .del{
        background-color: lightblue; /* Green */
        border: none;
        color: white;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        color: black;
        vertical-align: center;
        margin-top: 5%;
        
      }

      button:hover{
        cursor:pointer;
      }

      .myclass{
        width: 100%;
        text-align: right;
      }
      input{
        padding: 5px 10px;
      }
      
  body
      h1 INFO
      //- p We got the output of the DB dynamically
      <form class="myclass"> 
        <input type="text" name="search"></input>
        <button type="submit" value="Search">Search</button>
      </form>
      table(border="1")
        tr 
          th= "Name"
          th= "Age" 
          th= "Contact"
          th= "Add More"
          th= "View More"
          th= "Action"
        each info in sampledata
          tr 
            td= info.name
            td= info.age
            td= info.contact
            td  
              a(class="button" href=`/infodata/addmore/${info._id}`) Add
            td
              a(class="button" href=`/infodata/viewmore/${info._id}`) View
            td 
              form(action=`/infodata/del/${info._id}`)
                button(class="del") Delete
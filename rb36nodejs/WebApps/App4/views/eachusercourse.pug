html 
    head 
        title usernewcourses
        style. 
            table {
                border-collapse: collapse;
                border: 2px solid rgb(140, 140, 140);
                font-family: sans-serif;
                font-size: 0.8rem;
                letter-spacing: 1px;
                width: 100%;
                height: 15%;
                margin-left: 0px;
                margin-bottom: 0px;
            }
            td {
                text-align: center;
            }
            tr {
                height: auto;
            }
            tr:nth-of-type(odd) {
                background-color: rgb(237, 238, 242);
            }
            th {
                background-color: rgb(228, 240, 245);
            }
    body 
        h1 #{userinfopattuko["username"]}'s info
        p Email: #{userinfopattuko["email"]}
        p OldCourses: 
            ul 
                each userpurchase in userinfopattuko["courses"]
                    li= userpurchase
        p NewCourses: 
        div
            table(border="1")
                tr 
                    th coureid 
                    th approve 
                    th decline
                each userpurchase in userinfopattuko["purchases"]
                    tr 
                        td= userpurchase 
                        td
                            a(href=`/approve/${userinfopattuko._id}/${userpurchase}`) Approve
                        td
                            a(href=`/decline/${userinfopattuko._id}/${userpurchase}`) Decline

        
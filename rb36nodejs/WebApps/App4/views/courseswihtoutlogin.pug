html 
  head 
    title Courses 
    style.
      h1 {
        color: #333;
        text-align: center;
      }
      p {
        color: #666;
        font-size: 14px;
        margin: 20px;
        text-align: center;
      }
      table {
        border-collapse: collapse;
        border: 2px solid rgb(140, 140, 140);
        font-family: sans-serif;
        font-size: 0.8rem;
        letter-spacing: 1px;
        width: 100%;
        height: 15%;
        margin-left: 0px;
        margin-bottom: 0px;
      }
      td {
        text-align: center;
      }
      tr {
        height: auto;
      }
      tr:nth-of-type(odd) {
        background-color: rgb(237, 238, 242);
      }
      th {
        background-color: rgb(228, 240, 245);
      }
      .del {
        background-color: lightblue; /* Green */
        border: none;
        color: white;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        color: black;
        vertical-align: center;
        margin-top: 5%;
      }
      .myclass {
        width: 100%;
        text-align: right;
      }
      input {
        padding: 5px 10px;
      }

  body 
    h1 Courses 

    table(border="1")
      tr 
        th= "coursename"
        th= "courseduration"
        th= "courseprice"
        th= "courseprereq"
        th= "viewmore"
      each course in teeskomari
        tr 
          td= course.coursename
          td= course.courseduration
          td= course.courseprice
          td= course.courseprereq
          td
            a(class="button" href=`/courses/${course._id}`) View
